@model IEnumerable<FootballClubsManager.Models.FootballClub>

@{
    ViewData["Title"] = "Index";
}

<h1>Main Page: @System.Net.Dns.GetHostEntry(System.Net.Dns.GetHostName()).AddressList.ToString()</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Players</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (FootballClub club in Model) {
        <tr>
            <td>@club.Name</td>
            <td>@club.Country</td>
            <td>
                @foreach (Player player in club.Players)
                {
                    <ul>@player.Name @player.Surname</ul>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
